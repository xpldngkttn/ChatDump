STRUCT(VSInput)
{
    DATA(float3, Position, POSITION);
    DATA(float3, Color, COLOR0);
};

STRUCT(VSOutput)
{
    DATA(float4, Position, SV_Position);
    DATA(float3, Color, COLOR0);
};

ROOT_SIGNATURE(DefaultRootSignature)
VSOutput VS_MAIN(VSInput In)
{
    INIT_MAIN;
    VSOutput Out;
    Out.Position = float4(In.Position, 1.0f);
    Out.Color = In.Color;
    RETURN(Out);
}
